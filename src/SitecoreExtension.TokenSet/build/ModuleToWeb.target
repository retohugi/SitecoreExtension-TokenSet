<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <UsingTask TaskName="TransformXml" AssemblyFile="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v10.0\Web\Microsoft.Web.Publishing.Tasks.dll"/>

    <Import Project="CopyFiles.targets" />
    
    <Target Name="DoDeployToWeb">
      <Message Text="> DoDeployToWeb Target invoked" Importance="high" />
        <CallTarget Targets="ReadDeployDir" Condition="$(Configuration) == 'Debug' AND Exists('build/deploy.txt')" />
        <CallTarget Targets="DoCopyFiles" />
    </Target>

    <Target Name="ReadDeployDir">
    <!-- This needs to be a seperate target because otherwise $(DeployDir) won't be available in other targets. -->
        <Message Text="> ReadDeployDir Target invoked" Importance="high" />
        <ReadLinesFromFile File="build/deploy.txt">
            <Output PropertyName="DeployDir" TaskParameter="Lines" />
        </ReadLinesFromFile>
      <Message Text="> ReadDeployDir is: $(DeployDir)" Importance="high" />
    </Target>
</Project>
